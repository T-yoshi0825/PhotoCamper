<%= render 'layouts/sidebar' %>

<div class="col-sm-9">
	<% @images.each do |image| %>
    	<div class="block-image">
    		<%= link_to image_path(image) do %>
    		<%= attachment_image_tag image, :image, :fill, 100, 100, class: "img-thumbnail" %>
            <% end %>
        </div>
        <div class="caption">
        	<%= link_to image_path(image) do %>
        	<%= image.caption %>
        	<% end %>
        </div>

　　　　　<div class="favorite">
            <% if image.favorited_by?(current_user) %>
            <li>
                <%= link_to image_favorite_path(image), method: :delete do %>
                    <i class="fa fa-heart" aria-hidden = "true" style = "color: red;" ></i>
                    <%= image.favorites.count %> 
                <% end %>
            </li>
            <% else %>
            <li>
                <%= link_to image_favorites_path(image), method: :post do %>
                    <li class="fa fa-heart-o" aria-hedden = "true" ></li>
                    <%= image.favorites.count %> 
                <% end %>
            </li>
            <% end %>
        </div>

        <div class="comment-count">
            <h6><%= image.comments.count %>件コメント</h6>
        </div>
    <% end %>
</div>
