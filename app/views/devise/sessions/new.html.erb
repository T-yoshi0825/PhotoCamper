<div class="container">
  <div class="row">
    <div class="user-login-content">

      <h2 class="login-title">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="text-center">
              <h4>メールアドレスと<br>
              パスワードを入力してください</h4>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "btn-block" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "btn-block" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-success btn-block" %>
          </div>

        <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
