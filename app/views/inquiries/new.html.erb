<div class="row">	
	<div class="text-center">
		<div class="inquiry-form">
			<h3>お問い合わせフォーム</h3>
			<br>
			<%= form_for @inquiry, url: confirm_inquiries_path, method: :get do |f| %>
				<%= f.label :お問い合わせ内容　%><br>
				<%= f.text_field :message %><br>
				<%= f.label :お名前 %><br>
				<%= f.text_field :name %><br>
				<%= f.label :メールアドレス %><br>
				<%= f.text_field :email %><br>
			  <%= f.submit '送信' %>
			<% end %>
		</div>
	</div>	
</div>
