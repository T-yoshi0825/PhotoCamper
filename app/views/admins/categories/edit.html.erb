<div class="container">
    <div class="row">
        <div class="category-edit-cont">

            <h2 class="category-title">カテゴリー編集</h2>

            <%= render 'layouts/errors', obj: @category %>

            <%= form_for (@category), url: admins_category_path do |f| %>

                <div class="field">
                  <%= f.label :name, "ジャンル名", class: "form_label" %>
                  <%= f.text_field :name, class: "form_input" %>
                </div>
                <div class="field brown_txt">
                  <%= f.radio_button :active_status, :true %>
                  <%= f.label :active_status, "有効", {value: :true, style: "display: inline-block;"} %>
                  <%= f.radio_button :active_status, :false %>
                  <%= f.label :active_status, "無効", {value: :false, style: "display: inline-block;"} %>
                </div>

                <div class="category_actions">
                  <%= f.submit "更新する", class: "btn btn-primary" %>
                </div>
            <% end %>

        </div>
    </div>
</div>