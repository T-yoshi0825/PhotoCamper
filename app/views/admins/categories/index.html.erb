<div class="container">
    <div class="row">
        <div class="category-content">
            <div class="col-sm-5">
                <h2 class="category-title">カテゴリー登録</h2>
                
                    <div class="form-cont">

                    <%= render 'layouts/errors', obj: @category %>

                        <%= form_for (@category), url: admins_categories_path do |f| %>

                            <div class="field">
                              <%= f.label :name, "ジャンル名", class: "form_label" %>
                              <%= f.text_field :name, class: "form_input" %>
                            </div>

                            <div class="active-status-field">
                              <%= f.radio_button :active_status, :true %>
                              <%= f.label :active_status, "有効", {value: :true, style: "display: inline-block;"} %>
                              <%= f.radio_button :active_status, :false %>
                              <%= f.label :active_status, "無効", {value: :false, style: "display: inline-block;"} %>
                            </div>

                            <div class="category-actions">
                              <%= f.submit "登録", class: "btn btn-primary" %>
                            </div>

                        <% end %>
                    </div>
            </div>

            <br>

            <div class="col-lg-12">
            　  <h2 class="category-title">カテゴリー一覧</h2>
                <table class="table category_table table-hover table-inverse">
                    <thead class="thead">
                      <tr>
                        <th class="brown_txt txts">カテゴリー名</th>
                        <th class="brown_txt txts">ステータス</th>
                        <th colspan="2"></th>
                      </tr>
                    </thead>

                    <tbody>
                        <% @categories.each do |category| %>
                            <tr>
                              <td><%= category.name %></td>
                              <td>
                                <% if category.active_status == true %>
                                <p class="true_txt">有効</p>
                                <% else %>
                                <p class="false_txt">無効</p>
                                <% end %>
                              </td>
                              <td>
                                <%= link_to '編集', edit_admins_category_path(category), class: "edit_btn" %>
                              </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
